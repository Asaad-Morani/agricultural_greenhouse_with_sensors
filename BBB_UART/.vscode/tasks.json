{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                
                //recommended warning flags for compilations
                "-Wall",
                "-Wextra",
                "-Weffc++",
                "-pedantic",
                "-std=c++14",
                
                //source file:
                "${file}",
                
                //outputfile:
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                //working directory for compilation:
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}